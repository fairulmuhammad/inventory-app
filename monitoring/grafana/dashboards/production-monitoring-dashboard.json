{
  "dashboard": {
    "id": null,
    "title": "TechNova Production Monitoring Dashboard",
    "tags": ["production", "technova", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üü¢ Service Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 4, "x": 0, "y": 0},
        "targets": [{"expr": "up{job=\"inventory-service\"}", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {"colorMode": "background", "textMode": "value_and_name"}
      },
      {
        "id": 2,
        "title": "üìä Total Requests",
        "type": "stat",
        "gridPos": {"h": 6, "w": 4, "x": 4, "y": 0},
        "targets": [{"expr": "sum(flask_http_request_total{job=\"inventory-service\"})", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "‚ö° Response Time (95th)",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 4, "x": 8, "y": 0},
        "targets": [{"expr": "histogram_quantile(0.95, rate(flask_http_request_duration_seconds_bucket{job=\"inventory-service\"}[5m]))", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "üéØ Inventory Items",
        "type": "stat",
        "gridPos": {"h": 6, "w": 4, "x": 12, "y": 0},
        "targets": [{"expr": "inventory_items_total{job=\"inventory-service\"}", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 5,
        "title": "üíæ Memory Usage",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 4, "x": 16, "y": 0},
        "targets": [{"expr": "process_resident_memory_bytes{job=\"inventory-service\"}", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "max": 134217728,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 67108864},
                {"color": "red", "value": 100663296}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "üö® Error Rate",
        "type": "stat",
        "gridPos": {"h": 6, "w": 4, "x": 20, "y": 0},
        "targets": [{"expr": "rate(flask_http_request_total{job=\"inventory-service\",status=~\"5..\"}[5m])", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "üìà Request Rate Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [{"expr": "rate(flask_http_request_total{job=\"inventory-service\"}[5m])", "legendFormat": "{{method}} {{status}}", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {"drawStyle": "line", "lineInterpolation": "linear", "fillOpacity": 10}
          }
        }
      },
      {
        "id": 8,
        "title": "ü•ß HTTP Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 6},
        "targets": [{"expr": "flask_http_request_total{job=\"inventory-service\"}", "legendFormat": "{{status}}", "refId": "A"}],
        "options": {"reduceOptions": {"values": false, "calcs": ["lastNotNull"]}}
      },
      {
        "id": 9,
        "title": "üñ•Ô∏è Resource Usage Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 6},
        "targets": [
          {"expr": "process_resident_memory_bytes{job=\"inventory-service\"}", "legendFormat": "Memory", "refId": "A"},
          {"expr": "rate(process_cpu_seconds_total{job=\"inventory-service\"}[5m]) * 100", "legendFormat": "CPU %", "refId": "B"}
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"drawStyle": "line", "lineInterpolation": "linear"}
          },
          "overrides": [
            {"matcher": {"id": "byName", "options": "Memory"}, "properties": [{"id": "unit", "value": "bytes"}]},
            {"matcher": {"id": "byName", "options": "CPU %"}, "properties": [{"id": "unit", "value": "percent"}]}
          ]
        }
      }
    ],
    "templating": {"list": []},
    "annotations": {"list": []},
    "links": []
  }
}
